pipeline{
  
  agent any
  
  stages {
    
    stage("build") {
      
      steps {
        echo 'building the application....'
        echo 'application is built..'
        
      }
      
    }
    
    stage("test") {
       
      steps{
         echo 'testing the application......'
         echo 'application is tested..'
        
         }
      
    }
    
    stage("deploy")
    {
      
      steps{
        echo 'deploying the application....'
        echo 'application is deployed..'
        
          }
      
    }
    
  }
  
}
